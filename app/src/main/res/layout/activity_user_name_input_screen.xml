<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    tools:context="com.keytalk.nextgen5.view.activities.UserNameInputScreen">

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/size_15dp">

        <EditText
            android:id="@+id/usernamescreen_edittext"
            style="@style/screen_edittext"
            android:hint="@string/usernamescreen_default_text"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            android:id="@+id/usernamescreen_text"
            style="@style/screen_text"
            android:text="@string/usernamescreen_text" />

        <ListView
            android:id="@+id/userNameList"
            style="@style/screen_button"
            android:cacheColorHint="@color/transparent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />
    </LinearLayout>

</LinearLayout>

